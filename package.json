{
  "name": "iobroker.rainforesteagle",
  "version": "0.0.1",
  "description": "Template for adapter development",
  "author": {
    "name": "Massimiliano Menarini",
    "email": "massimiliano.menarini@outlook.com"
  },
  "homepage": "",
  "license": "MIT",
  "keywords": ["https://github.com/mmenarini/ioBroker.rainforesteagle",
    "ioBroker",
    "Smart Meter",
    "Smart Home",
    "home automation"
  ],
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {"https://github.com/mmenarini/ioBroker.rainforesteagle",
    "@iobroker/adapter-core": "^2.4.0"
  },
  "devDependencies": {
    "@iobroker/testing": "^2.2.0",
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/gulp": "^4.0.6",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.13",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^9.0.4",
    "@types/sinon-chai": "^3.2.4",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "axios": "^0.19.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.3.0",
    "gulp": "^4.0.2",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "main": "build/main.js",
  "scripts": {
    "prebuild": "rimraf ./build",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "test:ts": "mocha --opts test/mocha.custom.opts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "coverage": "nyc npm run test:ts",
    "lint": "eslint --ext .ts src"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/mmenarini/ioBroker.rainforesteagle/issues"
  },
  "readmeFilename": "README.md"
}